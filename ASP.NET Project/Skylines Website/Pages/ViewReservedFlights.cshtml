@page
@model Skylines_Website.Pages.ViewReservedFlightsModel
@{
    Layout = null;
}
@using SkyLinesLibrary;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Reserved Flights</title>
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/BookFlight.css" rel="stylesheet" />
    <link href="~/css/Grid.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-2">
                @await Html.PartialAsync("UserSidebar")
            </div>

            <!-- Main Content Area -->
            <div class="col-lg-10">
                <br>
                <h1>View Reserved Flights</h1>
                <br><br>
                <div class="container">
                    <table id="dataGrid" class="grid">
                        <thead>
                            <tr>
                                <th>Flight ID</th>
                                <th>Flight Name</th>
                                <th>Departure Airport</th>
                                <th>Arrival Airport</th>
                                <th>Travel Date</th>
                                <th>Departure Time</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Flight f in Model.Flights)
                            {
                                <tr>
                                    <td>@f.GetFlightID()</td>
                                    <td>@f.GetFlightName()</td>
                                    <td>@f.GetSource()</td>
                                    <td>@f.GetDestination()</td>
                                    <td>@f.GetTravelDate()</td>
                                    <td>@f.GetTakeoffTime()</td>
                                    <td>@f.GetPrice()</td>
                                </tr>
                            }
                            <!-- Rows will be dynamically added here -->
                        </tbody>
                    </table>
                </div>
                <!-- Add your main content here -->
            </div>
        </div>
    </div>
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            alert('@TempData["ErrorMessage"]');
        </script>
    }

    <!-- Include your JS files here -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>